#!/bin/bash

#SBATCH --partition=gpu_a100
#SBATCH --gpus=1
#SBATCH --job-name=ret_all_attacks_msdev_be
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=9
#SBATCH --time=04:00:00
#SBATCH --output=outputs/retrieve_all_attacks_msmarco_dev_be_base_%A.out

module purge
module load 2023
module load Anaconda3/2023.07-2

source activate hype

# Common Configuration
export MODEL_NAME_OR_PATH="$HOME/hypencoder/models/be_base"
export ENCODING_PATH="$HOME/hypencoder/encoded_items/msmarco-passage-dev"
export BASE_DATA_DIR="$HOME/hypencoder/data/adversarial_attack/msmarco_passage_dev_small"
export BASE_OUTPUT_DIR="$HOME/hypencoder/retrieval_outputs/adversarial/be_base/msmarco-passage-dev"
export QREL_JSON="$BASE_DATA_DIR/qrels.json"

mkdir -p "$(dirname "$BASE_OUTPUT_DIR")"

# Run retrieval for all attacks using a single script execution (loads index once)
python hypencoder_cb/inference/retrieve_multiple.py \
    --model_name_or_path=$MODEL_NAME_OR_PATH \
    --encoded_item_path=$ENCODING_PATH \
    --base_data_dir=$BASE_DATA_DIR \
    --base_output_dir=$BASE_OUTPUT_DIR \
    --attack_types "['synonym', 'paraphrase', 'naturality', 'mispelling', 'ordering']" \
    --qrel_json=$QREL_JSON \
    --query_id_key="id" \
    --query_text_key="text" \
    --query_max_length=64

echo "All retrievals completed."
