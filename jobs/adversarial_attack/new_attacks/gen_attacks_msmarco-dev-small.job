#!/bin/bash

#SBATCH --partition=gpu_a100
#SBATCH --gpus=1
#SBATCH --job-name=gen_attacks_msmarco-dev-small
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=9
#SBATCH --time=05:00:00
#SBATCH --output=outputs/gen_attacks_msmarco-dev-small_%A.out

module purge
module load 2023
module load Anaconda3/2023.07-2

source activate hype

# Configuration
export IR_DATASET_NAME="msmarco-passage/dev/small"
export OUTPUT_DIR="$HOME/hypencoder/data/adversarial_attack"

export CUDA_VISIBLE_DEVICES=""
export OMP_NUM_THREADS=$SLURM_CPUS_PER_TASK
export TF_NUM_INTRAOP_THREADS=$SLURM_CPUS_PER_TASK
export TF_NUM_INTEROP_THREADS=1

# Generate all attack types
python scripts/adversarial_attack/attacks.py \
    --ir_dataset_name=$IR_DATASET_NAME \
    --attack_types all \
    --output_dir=$OUTPUT_DIR
