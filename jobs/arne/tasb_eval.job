#!/bin/bash

#SBATCH --partition=gpu_h100
#SBATCH --gpus=1
#SBATCH --job-name=tasb_trec20
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=27
#SBATCH --mem=250G
#SBATCH --time=04:00:00
#SBATCH --output=outputs/arne/tasb_trec20_%A.out

module purge
module load 2023
module load Anaconda3/2023.07-2

source activate hype-faiss

python scripts/evaluate_tasb.py \
  --model_name="sebastian-hofstaetter/distilbert-dot-tas_b-b256-msmarco" \
  --ir_dataset_name="msmarco-passage/trec-dl-2020/judged" \
  --output_dir="$HOME/hypencoder/retrieval_outputs/BE-base/trec-dl-2020" \
  --encoded_items_path="$HOME/hypencoder/encoded_items/BE-base/trec-dl-2020" \
  --top_k=1000 \
  --batch_size=64 \
  --retrieve_faiss